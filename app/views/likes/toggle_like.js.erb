
<% if @is_liked %>
$('#like_<%= @tweet.id%>').html("UnLike");
noty({text: 'Tweet was Liked', type: 'success',timeout: 1000});

<% else %>

$('#like_<%= @tweet.id%>').html("Like");
noty({text: 'Tweet was UnLiked', type: 'alert',timeout: 1000});

<% end %>

$('#likeCount').text("<%= @tweet.likes.count %>");